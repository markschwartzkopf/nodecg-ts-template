{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "target": "es2015",
    "module": "none",
    "moduleResolution": "node",
    "isolatedModules": false,
    "noEmitOnError": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "incremental": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "outDir": "../..",
    "rootDir": ".."
  },
  "exclude": ["../extension/**/*", "../graphics/**/*"]
}
